<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cyanogenmod.designertools">

    <uses-permission android:name="cyanogenmod.permission.PUBLISH_CUSTOM_TILE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".DesignerToolsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.DesignerToolsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/app_shortcuts" />
        </activity>

        <activity android:name=".ui.ScreenRecordRequestActivity"
            android:theme="@style/TransparentTheme"
            android:exported="false"
            android:excludeFromRecents="true" />

        <activity android:name=".ui.StartOverlayActivity"
            android:theme="@style/TransparentTheme"
            android:exported="false"
            android:excludeFromRecents="true" />

        <activity android:name=".ui.CreditsActivity"
            android:theme="@style/AppTheme.Credits"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.AppShortcutsActivity"
            android:theme="@style/TransparentTheme"
            android:exported="false"
            android:excludeFromRecents="true" />

        <receiver android:name=".qs.GridQuickSettingsTile$ClickBroadcastReceiver">
            <intent-filter>
                <action android:name="org.cyanogenmod.designertools.action.TOGGLE_GRID_STATE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".qs.MockQuickSettingsTile$ClickBroadcastReceiver">
            <intent-filter>
                <action android:name="org.cyanogenmod.designertools.action.TOGGLE_MOCK_STATE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".qs.ColorPickerQuickSettingsTile$ClickBroadcastReceiver">
            <intent-filter>
                <action android:name="org.cyanogenmod.designertools.action.TOGGLE_COLOR_PICKER_STATE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".overlays.GridOverlay" />

        <service android:name=".overlays.MockOverlay" />

        <service android:name=".overlays.ColorPickerOverlay" />

        <service android:name=".service.ScreenshotInfoService" />

        <service android:name=".service.ScreenshotListenerService" />

        <service
            android:name=".service.qs.GridOverlayTileService"
            android:icon="@drawable/ic_qs_grid_off"
            android:label="@string/grid_qs_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.qs.MockOverlayTileService"
            android:icon="@drawable/ic_qs_overlay_off"
            android:label="@string/mock_qs_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.qs.ColorPickerTileService"
            android:icon="@drawable/ic_qs_colorpicker_off"
            android:label="@string/color_picker_qs_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>

</manifest>